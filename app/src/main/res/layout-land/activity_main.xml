<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity22">


    <TextView
        android:id="@+id/textViewCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="15sp"
        android:text="@string/ekaterinburg"
       android:background="@color/colorAccent"
        tools:ignore="MissingConstraints"></TextView>


    <!--погода на 10 дней-->
    <FrameLayout
        android:id="@+id/framePogTekVr2"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textViewCity">
        <fragment
            android:id="@+id/fragmentPogTekVr2"
            android:name="com.example.firstandroidproject.fragments.TemperatureNextDaysFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </FrameLayout>




</androidx.constraintlayout.widget.ConstraintLayout>